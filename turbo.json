{
    "npmClient": "pnpm",
    "pipeline": {
        "dev": {
            "dependsOn": ["build"],
            "cache": false
        },
        "start": {
            "dependsOn": ["build"],
            "cache": false
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "out/**",
                "dist/**",
                "build/**",
                "lib/**",
                ".svelte-kit/**"
            ]
        },
        "lint": { "dependsOn": ["build"] },
        "test:e2e": { "dependsOn": ["build"] },
        "test:unit": { "dependsOn": ["build"] },
        "clean": {
            "cache": false
        }
    }
}
