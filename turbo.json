{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [
        ".prettierignore",
        ".prettierrc.json",
        "Cargo.toml",
        "rust-toolchain.toml"
    ],
    "pipeline": {
        "dev": {
            "dependsOn": ["build"],
            "cache": false
        },
        "start": {
            "dependsOn": ["build"],
            "cache": false
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "out/**",
                "dist/**",
                "build/**",
                "lib/**",
                ".svelte-kit/**",
                "target"
            ]
        },
        "lint": { "dependsOn": ["build"] },
        "test:e2e": { "dependsOn": ["build"] },
        "test:unit": { "dependsOn": ["build"] },
        "clean": {
            "cache": false
        }
    }
}
