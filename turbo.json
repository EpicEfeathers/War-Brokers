{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": [".prettierignore", ".prettierrc.json"],
    "tasks": {
        "@warbrokers/stats-site#dev": {
            "dependsOn": ["@warbrokers/wbapi#health-check"],
            "cache": false
        },
        "health-check": {
            "cache": false
        },
        "dev": {
            "dependsOn": ["^dev"],
            "cache": false
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": [
                ".next/**",
                "!.next/cache/**",
                "out/**",
                "dist/**",
                "build/**",
                ".svelte-kit/**"
            ]
        },
        "lint": { "dependsOn": ["^lint"] },
        "test:e2e": {
            "env": [
                "PLAYWRIGHT_BROWSERS_PATH",
                "PLAYWRIGHT_SKIP_VALIDATE_HOST_REQUIREMENTS"
            ],
            "dependsOn": ["^test:e2e"]
        },
        "test:unit": { "dependsOn": ["^test:unit"] },
        "clean": {
            "cache": false
        }
    }
}
