{
    // workspace dictionary
    "cSpell.words": [
        "commitlint",
        "deathmatch",
        "developomp",
        "etags",
        "firebaserc",
        "firelink",
        "firestore",
        "fontawesome",
        "fortawesome",
        "minigun",
        "multisites",
        "openapi",
        "predeploy",
        "respawn",
        "royale",
        "rustup",
        "rxdi",
        "tailwindcss",
        "tsoa",
        "turborepo",
        "warbrokers",
        "wbapi",
        "wbtimeline"
    ],

    // editor
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "[toml]": {
        "editor.defaultFormatter": "tamasfe.even-better-toml"
    },
    "[rust]": {
        "editor.defaultFormatter": "rust-lang.rust-analyzer"
    },

    // tailwind
    "css.lint.unknownAtRules": "ignore",
    "scss.lint.unknownAtRules": "ignore",
    "tailwindCSS.classAttributes": ["class", "className", ".*Style*"],
    "editor.quickSuggestions": {
        "strings": true
    },

    // etc
    "search.exclude": {
        "**/pnpm-lock.yaml": true,
        "**/.pnp.*": true
    }
}
