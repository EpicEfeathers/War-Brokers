{
    "scripts": {
        "turbo": "turbo",
        "dev": "turbo run dev --parallel",
        "start": "turbo run start --parallel",
        "build": "turbo run build --parallel --cache-dir=.turbo",
        "lint": "prettier . --check && turbo run lint --parallel",
        "test:e2e": "turbo run test:e2e --parallel",
        "test:unit": "turbo run test:unit --parallel",
        "clean": "turbo run clean --parallel && rm -rf .turbo node_modules target Cargo.lock",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.8.1",
        "@commitlint/config-conventional": "^17.8.1",
        "@commitlint/types": "^17.8.1",
        "@playwright/test": "^1.41.2",
        "@types/eslint": "^8.56.2",
        "@types/node": "^20.11.17",
        "eslint": "^8.56.0",
        "husky": "^8.0.3",
        "prettier": "^3.2.5",
        "prettier-plugin-svelte": "^3.1.2",
        "prettier-plugin-tailwindcss": "^0.5.11",
        "turbo": "^1.12.3",
        "typescript": "^5.3.3"
    },
    "packageManager": "pnpm@8.15.1",
    "engines": {
        "node": "20"
    }
}
