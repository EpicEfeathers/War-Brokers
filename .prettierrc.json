{
    "semi": false,
    "tabWidth": 4,
    "endOfLine": "auto",
    "singleQuote": false,
    "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-svelte"],
    "overrides": [
        {
            "files": ["*.md", "*.yml"],
            "options": {
                "tabWidth": 2
            }
        },
        {
            "files": "*.svelte",
            "options": {
                "parser": "svelte"
            }
        }
    ]
}
