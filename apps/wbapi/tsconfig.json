{
    "compilerOptions": {
        // generation related
        "outDir": "build",
        "declaration": true,

        // regular configs
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,

        // node version related
        "moduleResolution": "Node",
        "module": "es2022",
        "lib": ["ES2022", "DOM"], // trpc needs the DOM lib
        "target": "ES2022",

        // path related
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src", ".eslintrc.cjs", "jest.config.cjs"]
}
